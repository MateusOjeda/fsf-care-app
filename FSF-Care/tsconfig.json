{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"paths": {
			"@/*": ["./*"],
			"~components/*": ["components/*"],
			"~firebase/*": ["firebase/*"],
			"~types/*": ["types/*"],
			"~types*": ["types/index"]
		},
		"baseUrl": "."
	},
	"include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
